<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <ImageView
        android:id="@+id/img_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_history"/>

    <ImageView
        android:layout_width="445dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_background"
        app:layout_constraintTop_toTopOf="@+id/img_background"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/brown_bg" />

    <ImageView
        android:id="@+id/img_profile_generic"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/left_profile_generic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txt_static_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ΕΠΙΠΕΔΟ"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_generic"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_profile_generic" />

    <TextView
        android:id="@+id/txt_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="00"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_generic"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="@+id/img_profile_generic"
        app:layout_constraintTop_toBottomOf="@+id/txt_static_level" />

    <ImageView
        android:id="@+id/img_badge"
        android:layout_width="76dp"
        android:layout_height="49dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/img_profile"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_generic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/img_profile_generic"
        app:layout_constraintTop_toTopOf="@+id/img_profile_generic"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/badge_level_0" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="149dp"
        android:layout_height="158dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_generic"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/img_profile_generic"
        app:layout_constraintTop_toTopOf="@+id/img_profile_generic"
        app:srcCompat="@drawable/ben_profile" />

    <ImageView
        android:id="@+id/img_profile_rating"
        android:layout_width="114dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_generic"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="@+id/img_profile_generic"
        app:layout_constraintTop_toBottomOf="@+id/img_profile"
        app:srcCompat="@drawable/profile_star_0" />

    <TextView
        android:id="@+id/txt_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="test"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_generic"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="@+id/img_profile_generic"
        app:layout_constraintTop_toBottomOf="@+id/img_profile_rating" />

    <TextView
        android:id="@+id/txt_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="από όλη την εκπαίδευση"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/img_status_bar"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_generic"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="@+id/img_profile_generic"
        app:layout_constraintTop_toBottomOf="@+id/txt_percentage"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/img_status_bar"
        android:layout_width="228dp"
        android:layout_height="29dp"
        app:layout_constraintBottom_toTopOf="@+id/img_back"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_generic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_profile_generic"
        app:layout_constraintTop_toBottomOf="@+id/txt_percentage"
        app:layout_constraintVertical_bias="0.454"
        app:srcCompat="@drawable/status_bar_0" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="178dp"
        android:layout_height="36dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_profile_generic"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="@+id/img_profile_generic"
        app:srcCompat="@drawable/back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_recycler_view"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:scrollbars="vertical"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="198dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_background"
        app:layout_constraintEnd_toEndOf="@+id/img_background"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="@+id/img_background"
        app:layout_constraintTop_toTopOf="@+id/img_background"
        app:layout_constraintVertical_bias="0.051"
        app:srcCompat="@drawable/my_badges" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="302dp"
        android:layout_height="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_background"
        app:layout_constraintEnd_toEndOf="@+id/img_background"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_background"
        app:layout_constraintVertical_bias="0.056"
        app:srcCompat="@drawable/my_history" />

    <TextView
